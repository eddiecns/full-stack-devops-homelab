apiVersion: apps/v1
kind: Deployment
metadata:
  name: django-bakery
spec:
  replicas: 1
  selector:
    matchLabels:
      app: django-bakery
  template:
    metadata:
      labels:
        app: django-bakery
    spec:
      initContainers:
      - name: run-migrations
        image: django-bakery-app:7af3a0f
        command: ['sh', '-c', 'python manage.py migrate --noinput']
        env:
        - name: DJANGO_COLLECTSTATIC
          value: "0"
        - name: DB_HOST
          value: "mysql-service"
        - name: DB_PORT
          value: "3306"
        - name: DB_NAME
          value: "bake_db"
        - name: DB_USER
          valueFrom:
            secretKeyRef:
              name: mysql-secret
              key: MYSQL_USER
        - name: DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: mysql-secret
              key: MYSQL_PASSWORD
      containers:
      - name: django
        image: django-bakery-app:7af3a0f
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 8000
        env:
        - name: DJANGO_COLLECTSTATIC
          value: "0"
        - name: DB_HOST
          value: "mysql-service"
        - name: DB_PORT
          value: "3306"
        - name: DB_NAME
          value: "bake_db"
        - name: DB_USER
          valueFrom:
            secretKeyRef:
              name: mysql-secret
              key: MYSQL_USER
        - name: DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: mysql-secret
              key: MYSQL_PASSWORD
        readinessProbe:
          httpGet:
            path: /
            port: 8000
          initialDelaySeconds: 30
          periodSeconds: 10
          timeoutSeconds: 5
          failureThreshold: 5
        livenessProbe:
          httpGet:
            path: /
            port: 8000
          initialDelaySeconds: 60
          periodSeconds: 10
          timeoutSeconds: 5
          failureThreshold: 5
